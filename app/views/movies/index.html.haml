-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      / %th Movie Title
      %th{:class=>@title_header, :id=>"title_header"}= link_to "Movie Title", movies_path(:sort_term =>'title', :is_hilite =>true) #my code change
      %th Rating
      / %th Release Date
      %th{:class=>@release_header,:id=>"release_date_header"}= link_to "Release Date", movies_path(:sort_term => 'release_date', :is_hilite =>true)  #my code change
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title  
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
